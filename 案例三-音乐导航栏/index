<script src="../jquery-1.12.4.js"></script>
<script>
    $(function () {
       var $li=$(".nav li");
        $li.mouseenter(function () {
            //鼠标进入后，通过动画span的top定位为0，
           $(this).children("span").stop().animate({top:0});
            //播放对应的音阶
            var idx=$(this).index();
            //由于jq对象不能调用play方法，故用get接收idx将对象转为DOM对象
            $("audio").get(idx).load();
            $("audio").get(idx).play();
        }).mouseleave(function () {
            $(this).children("span").stop().animate({top:60});
        });
    });
</script>
